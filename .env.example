# Unite-I Configuration
# Copy this file to .env and fill in your API keys

# AI Provider Selection
# Options: "claude" or "mistral"
AI_PROVIDER=claude

# Claude (Anthropic) Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Mistral Configuration (alternative provider)
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_MODEL=mistral-large-latest

# Web Search Configuration (for fact-checking)
# Get free API key at: https://brave.com/search/api/
BRAVE_API_KEY=your_brave_api_key_here
ENABLE_WEB_SEARCH=true

# Feature Flags
ENABLE_ADVANCED_ANALYSIS=true
ENABLE_VERACITY_CHECK=true
ENABLE_NUANCE_ANALYSIS=true

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000

# CORS Configuration
# For production, specify exact domains: https://example.com
# For development, use: *
CORS_ALLOWED_ORIGINS=*

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=

# Local LLM Configuration (experimental)
USE_LOCAL_LLM=false
LOCAL_LLM_URL=
LOCAL_LLM_MODEL=llama3.2
LOCAL_LLM_TIMEOUT=30 